{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "outDir": "../../dist",
    "noEmit": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
