{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "lib": ["dom", "es2015", "es2015.promise"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist/**/*.ts", "dist/**/*.js", "coverage", "build.js"]
}
